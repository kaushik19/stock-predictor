# Docker Development Environment Variables
NODE_ENV=development
PORT=5001
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://admin:password123@mongodb:27017/stock-predictor?authSource=admin
REDIS_URL=redis://:redis123@redis:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-development
JWT_EXPIRE=7d

# API Keys (for external data sources - add your keys here)
ALPHA_VANTAGE_API_KEY=demo
NEWS_API_KEY=demo
TWITTER_BEARER_TOKEN=demo

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log